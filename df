import express from "express";
import mongoose from "mongoose";
import cors from "cors";
import profileRouter from "./routes/profilehandler.js";

const app = express();

app.use(cors());
app.use(express.json());
app.use(express.urlencoded({ extended: true }));

// Serve uploaded images statically
app.use("/uploads", express.static("uploads"));

mongoose
  .connect("mongodb://localhost:27017/postflow")
  .then(() => console.log("âœ… DB connected!"))
  .catch((err) => console.error("DB connection error:", err));

// Use profilehandler router for image+caption upload & fetch
app.use("/profilehandler", profileRouter);

app.listen(8000, () => {
  console.log("server running on 8000 port");
});
